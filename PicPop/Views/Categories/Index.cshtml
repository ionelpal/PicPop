@model IEnumerable<PicPop.Models.CategoriesIndexModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center text-info">Administrator - Repository Categories Area</h3>
        <br />

        <table class="table table-striped  table-responsive ">
            <tr>
                <th class="text-info ">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="text-primary"> @Html.DisplayFor(modelItem => item.Name)</span>
                    </td>
                    <td>
                        <span class="btn btn-primary btn-xs">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</span> |
                        <span class="btn btn-primary btn-xs"> @Html.ActionLink("Details", "Details", new { id = item.Id })</span> |
                        @*|<span class="btn btn-link  btn-xs"> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</span>*@
                    </td>
                </tr>
            }

        </table>
        <div class="col-md-6 col-md-offset-3">
            <button type="button" class="btn btn-primary btn-xs">
                @Html.ActionLink("Create New", "Create")
            </button>

        </div>
    </div>

</div>
<br /><br />
