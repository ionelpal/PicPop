@model PicPop.Models.EditRolesViewModel

@{
    ViewBag.Title = "Edit Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center text-info">Administrator - @ViewBag.Title Users Area </h3>

        <br />




        @using (Html.BeginForm("EditRoles", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div>
                <span class="text-info text-center">
                    @Html.DisplayNameFor(model => model.Name)
                </span>

            </div>


            <table class="table table-striped table-responsive ">


                @for (int i = 0; i < Model.AspNetRoles.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(modelItem => modelItem.AspNetRoles[i].Id)
                            @Html.DisplayFor(modelItem => modelItem.AspNetRoles[i].Name)
                        
                        </td>
                        <td class="radio">
                            @Html.CheckBoxFor(modelItem => modelItem.AspNetRoles[i].IsActive, new { Style = "vertical-align:3px}" })
                        </td>
                    </tr>
                }

            </table>
            <div class="text-center"> </div>
            <ul class="pager">
                <li>
                    <a href="@Url.Action("Index", "Manage")">&larr;Return</a>
                </li>
                <li>
                   <button type="submit" class="btn btn-primary btn-sm"> Change Roles
                    </button> 
                </li>
            </ul>

        }
    </div>
</div>
     </br>