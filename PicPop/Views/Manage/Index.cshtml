@model IEnumerable<PicPop.Models.IndexViewModel>
@{
    ViewBag.Title = "Manage";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center text-info">Administrator - @ViewBag.Title Users Area </h3>
        
        <br />
       

        <p class="text-info">@ViewBag.StatusMessage</p>



            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th class="text-info">
                           User Name
                        </th>
                        <th class="text-danger">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-primary">@item.Name</td>
                            <td>
                                <span class="btn btn-primary btn-xs">
                                    @Html.ActionLink("Edit Roles", "EditRoles", new { id = item.Id })
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

       
    </div>

</div>
<br /><br />