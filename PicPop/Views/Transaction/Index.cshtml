@model IEnumerable<PicPop.Models.TransactionsDetailsViewModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center text-info">You Transaction</h3>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            </br>
            <table class="table table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.TypeTransaction)</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="info text-center">
                            @Html.ActionLink(item.Date.ToShortDateString(), "Details", new { id = item.Id })
                        </td>
                        <td class="text-info">
                            @Html.DisplayFor(modelItem => item.Amount)<span class="text-danger"> €</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeTransaction)
                        </td>
                        @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                            </td>*@
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

